<!DOCTYPE html>
<html>
<head>
    @{var rights = Session["Rights"] as KhalidPetroleum.Models.Role;
    var user = Session["User"] as KhalidPetroleum.Models.User;
    var outerIndex = 0;
    var innerInex = 0;}
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Vehicle Management System</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Content/images/khalid.jpg" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- JQuery DataTable Css -->
    <link href="~/Content/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet">
    <!-- Bootstrap Material Datetime Picker Css -->
    <link href="~/Content/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Content/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Css/style.css" rel="stylesheet">
    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Css/themes/all-themes.css" rel="stylesheet" />
</head>
<body class="theme-blue">
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand">Khalid Group of Petroleum | Maintenance</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <!-- Notifications -->
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            <i class="material-icons">menu</i>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">Menu</li>
                            <li class="body">
                                <ul class="menu">
                                    <li>
                                        <a href="/Main/SignIn">
                                            <div class="icon-circle bg-light-green">
                                                <i class="material-icons">input</i>
                                            </div>
                                            <div class="menu-info">
                                                <h4>Logout</h4>
                                                <p>
                                                    Exit the system
                                                </p>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <!-- #END# Notifications -->
                </ul>
            </div>
        </div>
    </nav>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="~/Content/images/khalid.jpg" width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Session["Username"]</div>
                    <div class="email">Khalid group</div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="active">
                        <a href="/Main/Index">
                            <i class="material-icons">home</i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li @(rights.isMNVehicles ? string.Empty : "style=display:none")>
                        <a href="/Main/Vehicles">
                            <i class="material-icons">directions_car</i>
                            <span>Vehicles</span>
                        </a>
                    </li>
                    <li @(rights.isMNStaff ? string.Empty : "style=display:none")>
                        <a href="/Main/Staff">
                            <i class="material-icons">person</i>
                            <span>Staff</span>
                        </a>
                    </li>

                    <li @(rights.isMNDeliverySites ? string.Empty : "style=display:none")>
                        <a href="/Main/DSites">
                            <i class="material-icons">ev_station</i>
                            <span>Delivery Sites</span>
                        </a>
                    </li>

                    <li @((user.UserID == 3) ? string.Empty : "style=display:none")>
                        <a href="/Main/Roles">
                            <i class="material-icons">supervisor_account</i>
                            <span>Roles</span>
                        </a>
                    </li>
                    <li @((user.UserID == 3 || user.UserType == "CRO" || user.UserType == "ACCOUNTS-MANAGER") ? string.Empty : "style=display:none")>
                        <a href="/Admin/Index">
                            <i class="material-icons">assessment</i>
                            <span>Stats</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Maintenance</h2>
            </div>

            <div class="row">
                <div class="col-xs-12 ol-sm-12 col-md-12 col-lg-12">
                    <div class="panel-group" id="accordion_9" role="tablist" aria-multiselectable="true">
                        @foreach (KeyValuePair<string, List<KhalidPetroleum.Models.Task>> item in ViewBag.Tasks)
                        {
                            <div class="panel panel-col-blue">
                                <div class="panel-heading" role="tab" id="@("outer_" + outerIndex)">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion_9" href="#@("inner_" + outerIndex)"
                                           aria-expanded="false" aria-controls="@("inner_" + outerIndex)">
                                            @item.Key
                                        </a>
                                    </h4>
                                </div>
                                <div id="@("inner_" + outerIndex)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@("outer_" + outerIndex)">
                                    <div class="panel-body">
                                        <div class="body table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>StartDate</th>
                                                        <th>Est.Date</th>
                                                        <th class="col-lg-2">TaskName</th>
                                                        <th>TaskOwner</th>
                                                        <th>AssignedTo</th>
                                                        <th>Description</th>
                                                        <th>UpdatedOn</th>
                                                        <th>Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var task in item.Value)
                                                    {
                                                        var color = "red";
                                                        if (task.TaskStatus == "IN_PROGRESS"){color = "yellow";}
                                                        else if (task.TaskStatus == "ON_APPROVAL") { color = "orange"; }
                                                        else if (task.TaskStatus == "APPROVED") { color = "greenyellow"; }
                                                        else if (task.TaskStatus == "COMPLETED") { color = "greenyellow"; }
                                                        
                                                        <tr>
                                                            <td>@task.StartDate.ToString("dd/MM/yyyy")</td>
                                                            <td>@(((DateTime)task.EstimatedDate).ToString("dd/MM/yyyy"))</td>
                                                            <td>@task.TaskName</td>
                                                            <td>@task.TaskOwner</td>
                                                            <td>@task.AssignedTo</td>
                                                            <td>@task.Details</td>
                                                            <td>@(((DateTime)task.LastUpdate).ToString("dd/MM/yyyy hh:mm tt"))</td>
                                                            <td style="color: white; background-color: @color">@task.TaskStatus</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                                                    outerIndex++;
                        }
                    </div>
                </div>
            </div>


            <!--Modal Start-->
            <div class="modal fade" id="mdModal" tabindex="-1" role="dialog">
                <div class="modal-dialog " role="document">
                    <div class="modal-content modal-col-light-blue">
                        <div class="modal-header">
                            <h3 class="modal-title" id="defaultModalLabel">TASK</h3>
                        </div>
                        <div class="modal-body">
                            <div id="alertdiv" class="row">
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row" id="divTaskOwner" style="display:none">
                                        <label for="assignto">Task Owner</label>
                                        <select id="sltTaskOwner" class="form-control show-tick"></select>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="taskName">Task Name</label>
                                            <input type="text" id="txtTaskName" class="form-control" placeholder="">
                                            <input type="text" id="txtTaskId" class="form-control" placeholder="" style="display:none">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="dueDate">Start Date</label>
                                            <input type="date" id="txtStartDate" class="form-control datetimepicker" placeholder="">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="reference">Expected Date</label>
                                            <input type="date" id="txtExpectedDate" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                </div>
                            </div><br>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="assignto">Assign To </label>
                                            <select id="sltAssignTo" class="form-control show-tick"></select>
                                        </div>
                                        <div class="col-md-4" style="visibility:hidden">
                                            <label for="priority">Priority</label>
                                            <select id="sltPriority" class="form-control show-tick">
                                                <option value="">Please select</option>
                                                <option value="1">Normal</option>
                                                <option value="2">Medium</option>
                                                <option value="3">Urgent</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="status">Status</label>
                                            <select id="sltStatus" class="form-control show-tick">
                                                <option value="0">Please select</option>
                                                <option value="PENDING">Pending</option>
                                                <option value="APPROVED" @((user.UserType == "ACCOUNTS-MANAGER" || user.UserType == "ADMIN" || user.UserType == "CRO") ? string.Empty : "style=display:none")>Approved</option>
                                                <option value="COMPLETED">Completed</option>
                                                <option value="ON_APPROVAL">On Approval</option>
                                                <option value="IN_PROGRESS">In Progress</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div><br>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">

                                        <div class="col-md-12">
                                            <label for="desc">Description</label>
                                            <textarea rows="3" class="form-control no-resize" id="txtDescription" placeholder=""></textarea>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="modalBtn" type="button" class="btn btn-link waves-effect" onclick="modalBtnClick()" value="SAVE">SUBMIT</button>
                            <button type="button" class="btn btn-link waves-effect" data-dismiss="modal">CLOSE</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Modal End-->
        </div>
    </section>
    <!-- Jquery Core Js -->

    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Jquery DataTable Plugin Js -->
    <script src="~/Content/plugins/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/buttons.flash.min.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/jszip.min.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/pdfmake.min.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/vfs_fonts.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/jquery-datatable/extensions/export/buttons.print.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Select Plugin Js -->
    <script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <!-- Slimscroll Plugin Js -->
    <script src="~/Content/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/plugins/node-waves/waves.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/task.js"></script>
    <!-- Demo Js -->
    <script src="~/Scripts/js/admin.js"></script>
    <script src="~/Scripts/js/demo.js"></script>
    <!-- Moment Plugin Js -->
    <script src="~/Content/plugins/momentjs/moment.js"></script>
    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script src="~/Content/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>


</body>
</html>
